@model InvoiceApplication.ViewModel.ProductQuantityModel

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginCollectionItem("ProductQuantitys"))
{
    <div class="row productRow">
        @Html.DropDownListFor(model => model.ProductId, new SelectList(ViewBag.ProductsIds, "Id", "Name"), htmlAttributes: new { @class = "form-control col-md-4" })

        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control col-md-4" } })
        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })

        <div class="col-md-4">
            <a href="#" id="deleteRow" class="deleteRow">Delete</a>
        </div>
    </div>
}
<script type="text/javascript">
    $("a.deleteRow").on("click", function() {
        $(this).parents("div.productRow:first").remove();
        return false;
    });
</script>