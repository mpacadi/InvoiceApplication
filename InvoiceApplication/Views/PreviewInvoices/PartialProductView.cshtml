@model InvoiceApplication.Models.Data.Invoice

<table class="table">
    <tr>
        <th>
            @Html.Label("Product")
        </th>
        <th>
            @Html.Label("Description")
        </th>
        <th>
            @Html.Label("Price")
        </th>
        <th>
            @Html.Label("Quantity")
        </th>
        <th>
            @Html.Label("Total price")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.InvoiceProducts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPriceTaxFree)
            </td>
        </tr>
    }
    <tr class="td-border">
        <td>
        </td>
        <td>
        </td>
        <td>
            @Html.Label("VAT: ")
            @Html.DisplayFor(model => model.InvoiceTax.Tax)
            @Html.Label(" %")
        </td>
        <td>
            @Html.Label("Total without VAT: ")
            @Html.DisplayFor(model => model.TotalTaxFree)
        </td>
        <td>
            @Html.Label("Total: ")
            @Html.DisplayFor(model => model.TotalTax)
        </td>
    </tr>


</table>
